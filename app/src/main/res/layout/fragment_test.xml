<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        >

        <EditText
            android:id="@+id/testt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Test ID"
            />

        <EditText
            android:id="@+id/testt2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Patient ID"
            />

        <EditText
            android:id="@+id/testt3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nurse ID"
            />

        <EditText
            android:id="@+id/testt4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="BPL"
            />

        <EditText
            android:id="@+id/testt5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="BPH"
            />

        <EditText
            android:id="@+id/testt6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Temperature"
            />

        <EditText
            android:id="@+id/testt7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Left vision"
            />

        <EditText
            android:id="@+id/testt8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Right Vision"
            />

        <Button
            android:id="@+id/testb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Test"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>